/* pages/chat/chat.wxss */
.container{
  width: 100%;
}
.chat_top{
  width: 100%;
  height: auto;
  text-align: center;
  font-size: 30rpx;
  color: rgba(7, 171, 247, 0.637);
}
.user_icon{
  width: 100%;
}
.user_icon image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 20rpx auto;
}
.chat_view{
  width: 700rpx;
  height: auto;
  margin: 10rpx auto 100rpx auto;
}
.add-wrap{
  position:fixed;
  bottom:0;
  display:flex;
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ffffff;
  border-top: solid 1px rgb(221, 221, 221);
  justify-content:center;
  flex-direction: row;
}
.comment{
  width: 700rpx;
  margin: auto;
  display: flex;
  height: 80rpx;
  flex-direction: row;
}
.inputContext{
  width: 500rpx;
}
.inputContext input{
  width: 96%;
  margin: auto;
  border: solid 1px rgb(243, 241, 241);
  background-color: rgb(243, 241, 241);
  height: 50rpx;
  margin-top: 12rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 0 6rpx;
}
.sub_btn{
  width: 200rpx;
}
.sub_btn button{
  width: 96%;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 12rpx;
  background-color: #ffffff;
}
.sub_btn button::after{
  border: none;
}
/*消息显示框*/
.message_to{
  width: 680rpx;
  height: auto;
  margin: 20rpx 10rpx;
}
.message_from{
  width: 680rpx;
  height: auto;
  margin: 20rpx 10rpx;
  text-align: right;
}
.message_date{
  font-size: 20rpx;
  color:turquoise;
}
.to_msg{
  border: solid 1px rgb(102, 102, 255);
  background-color: rgb(102, 102, 255);
  display: inline-block;
  width: auto;
  height: auto;
  padding: 24rpx 10rpx;
  color: #ffffff;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.from_msg{
  border: solid 1px rgb(30, 240, 11);
  background-color: rgb(30, 240, 11);
  padding: 24rpx 10rpx;
  display: inline-block;
  width: auto;
  height: auto;
  color: #ffffff;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.no-msg{
  width: 100%;
  font-size: 20rpx;
  text-align: center;
  color: rgb(179, 174, 174);
}