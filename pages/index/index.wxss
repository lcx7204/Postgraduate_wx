/**index.wxss**/
.container{
  width: 100%;
}
/*分割线*/
.line{
  width: 100%;
  height: 20rpx;
  background-color: rgb(207, 207, 207);
}
/*搜索框*/
.box{
  display:flex; 
  flex-direction: row;
  justify-content: center;
  align-items: center; 
  border-radius: 50px;
  background-color: #f5f5f5;
  height: 34px;
  width:700rpx;
  color:#999999;
  font-size: 26rpx;
}

.header{
  background-color: #ffffff;
  height:100rpx;
  width:100%;
  border-top:1px solid #f5f5f5;
  border-bottom:1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow:0 0 3px 0 #e3e3e3; 
  z-index: 99;
}

.box image{
  margin-right:10px;
  width:14px;
  height:14px;
  margin-bottom:-2px;
}

/*banner*/
swiper {
  height: 420rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.swiper-container{
  width: 100%;
  position: relative;
}

.swiper-container .swiper{
  height: 420rpx;
}

.swiper-container .swiper .img{
  width: 100%;
  height: 100%;
}

/*文章分类*/
.atricleList{
  width: 100%;
  height: auto;
  margin: 10rpx auto;
}

.articleType{
  width: 700rpx;
  height: auto;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
}

.articleTypeIcon{
  width: 50rpx;
  height: 50rpc;
}

.articleTypeIcon image{
  width: 50rpx;
  height: 50rpx;
}

.articleTypeTitle{
  width: 640rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  font-weight: 800;
}

.articleMiddle{
  width: 700rpx;
  margin: auto;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  border-bottom: solid 1px #cccbcb;
}

.articleContent{
  width: 560rpx;
  margin: 30rpx 10rpx;
  display: flex;
  flex-direction: column;
}

.articleContentTop{
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
}

.articleContentDate{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #cccbcb;
}

.articlePic{
  width: 100rpx;
  height: 140rpx;
  margin: 30rpx 0;
}

.articlePic image{
  width: 100rpx;
  height: 100rpx;
}