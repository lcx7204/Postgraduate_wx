/* pages/myKeep/myKeep.wxss */
.container{
  width: 100%;
}
/*文章分类*/
.atricleList{
  width: 100%;
  height: auto;
  margin: 10rpx auto;
}

.articleType{
  width: 700rpx;
  height: auto;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
}

.articleTypeIcon{
  width: 50rpx;
  height: 50rpc;
}

.articleTypeIcon image{
  width: 50rpx;
  height: 50rpx;
}

.articleTypeTitle{
  width: 640rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 36rpx;
  font-weight: 800;
}

.articleMiddle{
  width: 700rpx;
  margin: auto;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  border-bottom: solid 1px #cccbcb;
}

.articleContent{
  width: 560rpx;
  margin: 30rpx 10rpx;
  display: flex;
  flex-direction: column;
}

.articleContentTop{
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
}

.articleContentDate{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #cccbcb;
}

.articlePic{
  width: 100rpx;
  height: 140rpx;
  margin: 30rpx 0;
}

.articlePic image{
  width: 100rpx;
  height: 100rpx;
}