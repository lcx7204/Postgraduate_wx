/* pages/article/article.wxss */
.articleTitle{
  width: 100%;
  font-weight: 800;
  text-align: center;
  font-size: 36rpx;
  margin: 20rpx auto;
}
.richText{
  width: 700rpx;
  height: auto;
  margin: 20rpx auto 30rpx auto;
}
.article_bottom{
  width: 700rpx;
  margin: 10rpx auto 30rpx auto;
  display: flex;
  flex-direction: row;
  text-align: center;
}
.zan{
  width: 350rpx;
  font-size: 30rpx;
  color: lightgray;
}
.keep{
  width: 350rpx;
}
.article_bottom image{
  width:50rpx;
  height: 50rpx;
}
.add-wrap{
  position:fixed;
  bottom:0;
  display:flex;
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ffffff;
  border-top: solid 1px rgb(221, 221, 221);
  justify-content:center;
  flex-direction: row;
}
.comment{
  width: 700rpx;
  margin: auto;
  display: flex;
  height: 80rpx;
  flex-direction: row;
}
.inputContext{
  width: 500rpx;
}
.inputContext input{
  width: 96%;
  margin: auto;
  border: solid 1px rgb(243, 241, 241);
  background-color: rgb(243, 241, 241);
  height: 50rpx;
  margin-top: 12rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 0 6rpx;
}
.sub_btn{
  width: 200rpx;
}
.sub_btn button{
  width: 96%;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 12rpx;
  background-color: #ffffff;
}
.sub_btn button::after{
  border: none;
}

.commentLists{
  width: 700rpx;
  height: auto;
  margin: 0 auto 100px auto;
}
.commentList{
  width: 100%;
  height: auto;
  display: flex;
  margin: 20rpx auto;
  flex-direction: row;
}
.user_icon{
  display: flex;
  width: 100rpx;
  text-align: center;
}
.user_icon image{
  width: 60rpx;
  height: 60rpx;
}
.comment_right{
  width: 600rpx;
  display: flex;
  flex-direction: column;
}
.user_name{
  height: 36rpx;
  line-height: 36rpx;
  color: lightblue;
  font-size: 24rpx;
}
.comment_content{
  width: 100%;
  height: auto;
  font-size: 30rpx;
}